
mixin field(title)
	dt= title
	dd
		block

-
	// Expects variables options, slug, blueprints

	selected_id = options['blueprint'] || ""

+field("Blueprint")
	select.switch(name="options[blueprint]", data-anchor=".blueprint")
		option(value="")
			| - Choose a Blueprint -
		each blueprint in blueprints
			option(value="#{blueprint.rubric_id}", selected=( selected_id == blueprint.rubric_id))
				| #{blueprint.name}

	each blueprint in blueprints
		div.blueprint(class=blueprint.rubric_id, style=( blueprint.rubric_id == slug ? '' : "display:none;" ))
			p #{blueprint.description}
