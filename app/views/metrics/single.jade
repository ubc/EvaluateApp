- // This file defines the HTML for a Metric.
doctype html
html
	head
		link(rel="stylesheet", href="/stylesheets/metric.css")
		link(rel="stylesheet", href="/fontello/css/evaluate.css")
		link(rel="stylesheet", href="/fontello/css/animation.css")
		script(src="https://code.jquery.com/jquery-2.2.0.min.js")

		if stylesheet
			link(rel="stylesheet", href=stylesheet)
	
	body#metric(class= "metric-"+metric.type.slug + ( transaction_id == null ? " disabled" : "" ))
		strong.title= metric.options['title']
		| !{metric.type.render_display( locals )}

		div#error-display

	if transaction_id
		footer
			script.
				data = {
					transaction_id: "#{transaction_id}",
				};
			
			script(type="text/javascript", src="/javascripts/metric.js")
